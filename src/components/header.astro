<header class="sticky top-0 z-50 bg-[#4b4b4d] shadow-lg">
  <div
    class="h-16 md:h-20 lg:h-24 flex items-center justify-between px-4 sm:px-6"
  >
    <div class="flex-shrink-0 mr-4">
      <img
        class="h-10 w-16 sm:h-12 sm:w-20 md:h-16 md:w-24 lg:h-20 lg:w-28"
        src="/logo.png"
        alt="Logo de Clic Baradero"
      />
    </div>

    <nav class="flex-1 flex justify-end items-center">
      <div class="hidden lg:flex items-center gap-2">
        <a
          href="/"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >INICIO</a
        >
        <a
          href="/universidades"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >UNIVERSIDADES</a
        >
        <a
          href="/sob-nosotros"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >CUB</a
        >
        <a
          href="/fines"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >FINES</a
        >
        <a
          href="/contac"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >CONTACTANOS</a
        >
        <a
          href="/noticias"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >NOTICIAS</a
        >
        <a
          href="/form"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >INSCRIPCIONES</a
        >
        <a
          href="/producciones-alumnos"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >PRODUCCIONES ALUMNOS</a
        >
        <a
          href="/afiliacion-municipal"
          class="nav-link text-white text-sm font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-all duration-200 whitespace-nowrap"
          >AFILIACION MUNICIPAL</a
        >
      </div>

      <button
        id="menu-toggle"
        class="text-white lg:hidden p-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </nav>
  </div>

  <div
    id="mobile-menu"
    class="hidden lg:hidden bg-[#4b4b4d] w-full shadow-inner absolute top-full left-0 transition-all duration-300 ease-in-out"
  >
    <div class="flex flex-col p-4 space-y-2">
      <a
        href="/"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >INICIO</a
      >
      <a
        href="/universidades"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >UNIVERSIDADES</a
      >
      <a
        href="/centrouniversitario"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >CUB</a
      >
      <a
        href="/fines"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >FINES</a
      >
      <a
        href="/contac"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >CONTACTO</a
      >
      <a
        href="/noticias"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >NOTICIAS</a
      >
      <a
        href="/form"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >INSCRIPCIONES</a
      >
      <a
        href="/producciones-alumnos"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >PRODUCCIONES</a
      >
      <a
        href="/afiliacion-municipal"
        class="nav-link-mobile text-white font-semibold px-3 py-2 rounded-md hover:bg-[#606062] transition-colors duration-200"
        >AFILIACIÃ“N</a
      >
    </div>
  </div>
</header>

<style>
  /* Breakpoints personalizados para mejor control */
  @media (min-width: 1024px) and (max-width: 1279px) {
    .nav-link {
      font-size: 0.75rem !important; /* text-xs */
      padding-left: 0.5rem !important;
      padding-right: 0.5rem !important;
    }
  }

  @media (min-width: 1280px) {
    .nav-link {
      font-size: 0.875rem !important; /* text-sm */
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }
  }

  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .nav-link,
    .nav-link-mobile {
      transition: none !important;
    }
  }
</style>

<script>
  // Script runs on the client to handle the mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener("click", () => {
        // Toggle the 'hidden' class to show/hide the menu
        mobileMenu.classList.toggle("hidden");
      });

      // Close the menu when a link is clicked on mobile
      const mobileLinks = mobileMenu.querySelectorAll("a");
      mobileLinks.forEach((link) => {
        link.addEventListener("click", () => {
          if (!mobileMenu.classList.contains("hidden")) {
            mobileMenu.classList.add("hidden");
          }
        });
      });
    }
  });
</script>
