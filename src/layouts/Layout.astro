---
import "../styles/global.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---

<!doctype html>
<html lang="es-AR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Centro Universitario Baradero</title>

    <slot name="head" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html {
    /* Mantenemos solo el estilo para <html> aquí */
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
  
  /* Se eliminó el estilo del <body> de aquí. Ahora el estilo del <body>
  del formulario no entrará en conflicto con los demás archivos. */
</style>